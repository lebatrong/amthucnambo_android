<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.LoginRegister.LoginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/lnldangnhapemail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilemail_login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <lbt.com.amthuc.customView.CustomEditText
                android:inputType="textEmailAddress"
                android:hint="@string/tendangnhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilpwd_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <lbt.com.amthuc.customView.CustomEditTextPassword
                android:hint="@string/matkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:userStrike="false"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:text="@string/quenmatkhau"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnlogin_login"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:text="@string/dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="visible"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="@string/dangnhapbang"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/btnLoginWithPhone"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/phone"
                android:background="@color/transparent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="@string/sodienthoai"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lnldangnhapsdt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnlnhapsdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:text="@string/chonquocgia"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <Spinner
                android:paddingLeft="10dp"
                android:id="@+id/spinnerCountries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:gravity="center|bottom"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:id="@+id/tvcodePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="8"
                    android:id="@+id/tilsdt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <lbt.com.amthuc.customView.CustomEditText
                        android:id="@+id/editTextPhone"
                        android:inputType="numberSigned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:digits="0123456789"
                        android:hint="@string/sodienthoai"
                        android:maxLength="10" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnloginsdt_login"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:text="@string/dangnhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnlverrycode"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/btnguilaima_login"
                android:id="@+id/tilcode_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <lbt.com.amthuc.customView.CustomEditText
                    android:inputType="numberSigned"
                    android:hint="@string/verrycode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/btnguilaima_login"
                android:textAllCaps="false"
                android:background="@drawable/custom_button_capnhatthongtin"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:text="@string/guilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </RelativeLayout>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnloginsdtverycode_login"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:text="@string/xacnhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />




        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="visible"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="@string/dangnhapbang"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/btnLoginWithAccount"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/user"
                android:background="@color/transparent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="@string/taikhoan"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>